<%= provide(:title, "Sign Up")%>

<div class="container text-white">
  <h1 class="title">Sign Up</h1>
  <hr>
  <div class="session-form px-4 py-4 rounded">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "name", class: "form-input" },
                    label_html: { class: "form-label" }  %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-input" },
                    label_html: { class: "form-label" }  %>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-input" },
                    label_html: { class: "form-label" }  %>
        <% if @minimum_password_length %>
          <p><%= @minimum_password_length %> characters minimum</p>
        <% end %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-input" },
                    label_html: { class: "form-label" }  %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign Up", class: "btn btn-outline-light btn-lg my-3" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
