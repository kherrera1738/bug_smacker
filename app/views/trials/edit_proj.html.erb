<div class="container-fluid text-white">
  <div class="row justify-content-center">
    <div class="col-12 col-xl-8 col-xxl-6">
      <h1 class="title" >Edit Project</h1>
      <hr>
      <div class="ticket-card">
        <div class="px-4 py-3 ticket-card-body">
          <%= simple_form_for(@project) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <%= f.input :name, 
                          input_html: { class: "form-input"},  
                          label_html: { class: "fs-3"} %>
              <%= f.input :description,
                          as: :text,
                          input_html: { class: "form-input", rows: "4"},  
                          label_html: { class: "fs-3"} %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, class: "btn btn-outline-light btn-lg fs-3", disabled: true%>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-2">
        <%= link_to 'Back', trial_project_path(@project.id), class: "fs-3 mx-3" %>
      </div>
    </div>
  </div>
</div>
