<div id="mySidebar" class="sidebar" data-open="false">
  <% if user_signed_in? %>
    <%= link_to user_dashboard_path(current_user.id) do %>
      <i class="bi bi-bar-chart-line"></i> My Dashboard
    <% end %>
    <%= link_to edit_user_registration_path(current_user.id) do %>
      <i class="bi bi-person"></i> Profile
    <% end %>
    <%= link_to pages_help_path do %>
      <i class="bi bi-question-circle"></i> Help
    <% end %>
    <hr>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to root_path do %>
      <i class="bi bi-house-door"></i> Home
    <% end %>
    <hr>
    <%= link_to 'Sign In', new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path %>
  <% end %>
</div>